@model List<IntegratedSystems.Domain.Domain_Models.Vaccine>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Embg
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Patient.Embg
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Patient.FirstName
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Patient.LastName
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Patient.PhoneNumber
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Patient.Email
        </dd>
    </dl>
</div>
<hr />
<table class="table table-bordered">
    <thead>
        <th>#</th>
        <th>Center</th>
        <th>Date Taken</th>
        <th>Certificate</th>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@item.Center.Name</td>
                <td>@item.DateTaken</td>
                <td>@item.Certificate</td>
            </tr>
        }
    </tbody>
</table>
<div>
