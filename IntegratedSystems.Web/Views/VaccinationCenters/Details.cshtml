@model List<IntegratedSystems.Domain.Domain_Models.Vaccine>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Vaccines in  Vaccination Center: @ViewBag.VaccinationCenterName.Name</h1>
<hr/>
<div>
    <h2 class="text-end text-primary">Capacity: @Model.Count() / @ViewBag.VaccinationCenterName.MaxCapacity</h2>
</div>
<hr />
<div>
    <a
    class="btn btn-success w-100 mb-4 mt-2"
    asp-controller="VaccinationCenters"
    asp-action="CheckRedirectToAddVaccine"
    asp-route-id="@ViewBag.VaccinationCenterName.Id">
        Add Vaccined Patient
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Taken
            </th>
            <th>
                Vaccination Center
            </th>
            <th>
                Certificate
            </th>
@*             <th></th> *@
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientFor.FirstName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PatientFor.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTaken)
                </td>
                <td>
                    @ViewBag.VaccinationCenterName.Name
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certificate)
                </td>
@*                 <td>
                    <a asp-action="Delete" asp-controller="Vaccines" asp-route-id="@item.Id">Delete</a>
                </td> *@
            </tr>
        }
    </tbody>

</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
